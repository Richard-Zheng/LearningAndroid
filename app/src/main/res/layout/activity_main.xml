<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_start_hello_toast_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="startHelloToast"
            android:text="Hello Toast" />

        <Button
            android:id="@+id/button_start_scrolling_text_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="startScrollingText"
            android:text="Scrolling Text" />

        <Button
            android:id="@+id/button_start_template_basic_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="startTemplateBasicActivity"
            android:text="Template Basic Activity" />

        <Button
            android:id="@+id/button_start_send_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="startSendActivity"
            android:text="Send Activity" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>