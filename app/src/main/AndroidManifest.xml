<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.richard.learningandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ReceiveActivity"
            android:label="@string/activity2_name"
            android:parentActivityName=".SendActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SendActivity" />
        </activity>
        <activity android:name=".SendActivity" />
        <activity
            android:name=".TemplateBasicActivity"
            android:label="@string/title_activity_template_basic"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ScrollingTextActivity"
            android:label="Scrolling Text" />
        <activity
            android:name=".HelloToastActivity"
            android:label="Hello Toast" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>